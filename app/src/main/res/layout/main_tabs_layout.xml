<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_tab_1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/tab_stocks"
        android:textSize="@dimen/active_tap_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_tab_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/tab_favourite"
        android:textSize="@dimen/inactive_tap_size"
        android:textColor="@color/grey"
        android:gravity="bottom"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_tab_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>