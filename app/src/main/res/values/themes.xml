<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YaStocks" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="Theme.YaStocks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YaStocks.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="Theme.YaStocks.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="textAllCaps">false</item>
        <item name="itemTextAppearanceActive">@style/MyActiveTabTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/MyInactiveTabTextAppearance</item>
    </style>
    <style name="MyActiveTabTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyInactiveTabTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BlackButton" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="backgroundColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:radius">20dp</item>
    </style>

</resources>